@model IEnumerable<CWG.Web.Blog.ViewModels.BlogPostListItem>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Slug)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FeaturedImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FeaturedContent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FeaturedContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FeaturedImageUrl)
            </td>
        </tr>
    }

</table>