@using CWG.Web.Core.Extensions
@model CWG.Web.Blog.ViewModels.BlogPostList

@{
    ViewBag.Title = "Latest Casino News - Tips & Game Guides | AllStarSlots";
    ViewBag.MetaDescription = "Read about the latest promotions, game reviews, articles & more. Find tricks to beat online poker games & slots games on the AllStarSlots Casino blog here.";
}

<div id="blog-wrapper" class="ass-container">
    <div class="ass-title">
        <h1>Blog</h1>
        <p class="ass-container">
            Looking for gaming tips? Help with your poker strategy? Want to learn how to play baccarat? The All Star Slots Casino Blog is your one-stop resource for all things gambling, from instructional gaming guides to special bonus codes and everything in between.
        </p>
    </div>

    <h2 class="ass-fade h-spacer">Latest Blog Posts</h2>

    @foreach (var item in Model.Posts)
    {
        <div class="ass-container">
            <div class="post content-body pure-g">
                <div class="pure-u-1 pure-u-md-3-5">
                    <div class="img-rounded" style="background-image:url(@item.FeaturedImageUrl);"></div>
                </div>
                <div class="preview pure-u-1 pure-u-md-2-5">
                    <h3>@item.Title</h3>
                    <p>By @item.Author &#8226; @item.Created.DateTime.ToRelativeTimeString().</p>
                    <div class="featured-text"><p>@Html.Raw(item.FeaturedContent)</p></div>

                    <a class="ass-button" href="@Url.Action("Details", new { slug = item.Slug })">Read More</a>
                </div>
            </div>
        </div>
        <hr />
    }

    @Html.Partial("_Pager", Model.Pager)
</div>
