    ViewBag.MetaDescription = "Have a question? 24/7 help is just a click away. We offer a variety of ways for you to get in touch with our friendly & professional customer support staff.";
}


<div id="contact-us-wrapper" class="ass-container">

    <div class="ass-title">
        <h1 class="h-spacer">Contact Us</h1>
        <p>
            Do you have a question, concern or just want to get in touch? At All Star Slots Online Casino, our award winning customer
            support services are just a click or a phone call away. We have a highly experienced and professional customer support
            team available 24 hours a day, 7 days a week, every day of the year. To get in touch, please use our Live chat, Telephone
            or Email services to contact a member of our friendly and professional team. We are always happy to hear from you!
        </p>
    </div>

    <h2 class="h2 header ass-fade h-spacer">Live Chat</h2>

    <div class="pure-g ass-content-container">
        <div class="pure-u-md-2-3 pure-u-1">
            <p>
                Our Live Chat services mean that you can chat with our customer support team from the website or anywhere in the
                casino lobby to receive instant assistance, allowing us to solve any problems or answer any questions you may
                have while playing at All Star Slots.
            </p>
            <p>
                Click the Open Live Chat button to speak to our online casino support team now.
            </p>
        </div>
        <div class="pure-u-md-1-3 pure-u-1 right-col">
            <div class="right">
                <img src="~/Images/ContactUs/group-phone-service.png" class="pure-img" />
                <a id="_lpChatBtn" href='http://server.iad.liveperson.net/hc/21493779/?cmd=file&file=visitorWantsToChat&site=21493779&byhref=1&imageUrl=http://www.clubworldcasinos.com/_Common/Images/Chat' target='chat21493779' onClick="lpButtonCTTUrl = 'http://server.iad.liveperson.net/hc/21493779/?cmd=file&file=visitorWantsToChat&site=21493779&imageUrl=http://www.clubworldcasinos.com/_Common/Images/Chat&referrer='+escape(document.location); lpButtonCTTUrl = (typeof(lpAppendVisitorCookies) != 'undefined' ? lpAppendVisitorCookies(lpButtonCTTUrl) : lpButtonCTTUrl); window.open(lpButtonCTTUrl,'chat21493779','width=525,height=450,resizable=yes');return false;" style="display:none;">
                    <img src='http://server.iad.liveperson.net/hc/21493779/?cmd=repstate&site=21493779&channel=web&&ver=1&imageUrl=http://www.clubworldcasinos.com/_Common/Images/Chat' name='hcIcon' border=0>
                </a>
                <button class="pure-button ass-button live-chat-button center" onclick="$('#_lpChatBtn')[0].click()">Open Live Chat</button>
            </div>
        </div>
    </div>

    <h2 class="h2 header ass-fade h-spacer">Phone</h2>

    <div class="pure-g ass-content-container">
        <div class="pure-u-md-2-3 pure-u-1">
            <p>
                Our phone staff are always available whenever you may need us. Simply call us on our Toll-Free number for
                direct and immediate assistance 24/7.
            </p>
            <p>
                If you need to fax us any information, the number is included just below.
            </p>
        </div>
        <div class="pure-u-md-1-3 pure-u-1 right-col">
            <div class="right">
                <img src="~/Images/ContactUs/phone-service.png" class="pure-img" />
                <div class="bordered">
                    <span class="fixed-width">Call Us:</span> 1 866 456 5287
                </div>
                <div class="bordered">
                    <span class="fixed-width">Fax Us:</span> 1 866 728 5443
                </div>
            </div>
        </div>
    </div>

    <h2 class="h2 header ass-fade h-spacer">Email</h2>

    <div class="pure-g ass-content-container">
        <div class="pure-u-md-2-3 pure-u-1">
            <p>
                If direct assistance isn't what you require, you can send us an email. Simply complete the form, click the
                Send Message button and one of our friendly support team will respond to you through the email address you
                provide us with.
            </p>
            <p>
                We will do our best to answer all enquiries as soon as possible. However, our email responses can sometimes
                get caught in spam or junk filters. If you have not heard back from us within 48 hours, please contact us
                via our Live Chat or Phone services.
            </p>
        </div>
        <div class="pure-u-md-1-3 pure-u-1 right-col contact">
            @using (Html.BeginForm())
            {
                <div>
                    <label for="email">Email:</label>
                    @Html.ValidationMessageFor(model => model.Email)
                    @Html.EditorFor(model => model.Email)
                </div>
                    <div>
                        <label for="name">First Name:</label>
                        @Html.ValidationMessageFor(model => model.FirstName)
                        @Html.EditorFor(model => model.FirstName)
                    </div>
                    <div>
                        <label for="name">Last Name:</label>
                        @Html.ValidationMessageFor(model => model.LastName)
                        @Html.EditorFor(model => model.LastName)
                    </div>
                    <div>
                        <label for="message">Message:</label>
                        @Html.ValidationMessageFor(model => model.Message)
                        @Html.TextAreaFor(model => model.Message)
                    </div>

                    <div>
                        <label>Prove you're a human</label>
                        @Html.ValidationMessage("Recaptcha")
                        <div class="g-recaptcha" data-sitekey="6LdcRQwTAAAAAGx_gJQJ2wgsKvA6VYZ7vmwJbMD-"></div>
                    </div>

                    <button id="contact-us-form-submit" href="#" class="pure-button ass-button send-button center">Send</button>
            }

        </div>
    </div>

    <h2 class="h2 header ass-fade h-spacer">Post</h2>

    <div class="pure-g ass-content-container">
        <div class="pure-u-md-1 pure-u-1">
            <p>To contact or to send anything to us by post, please use our Head Office address:</p>
            <p>
                World Online Gaming<br />
                PO Box 313<br />
                Manchester<br />
                M21 3BY<br />
                United Kingdom
            </p>
        </div>
    </div>

</div>

<script type="text/javascript" src='https://www.google.com/recaptcha/api.js'></script>
@section FooterScripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
