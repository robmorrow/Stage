@model CWG.Web.Core.ViewModels.PromotionsViewModel
@{
    ViewBag.Title = "Casino Bonus & Promotions Offers | AllStarSlots";
    ViewBag.MetaDescription = "The best online casino promotions for you at AllStarSlots casino! Check out our welcome offers, daily specials & limited deals on the promotions page here!";
}

@section AlternateHeader{
    @{
        var today = Model.TodaysPromotion;
        <div class="promotion-header">
            <div class="ass-container pure-g">
                <div class="pure-u-1 pure-u-md-1-2">
                    <div>
                        <p class="h1">@today.Name</p>
                        @Html.Raw(today.Description)
                        <h3>Use Code:</h3>
                        <div class="promo-coupon-container">
                            <div class="promo-coupon shadow-bend-left"><h4 class="h3">@today.CouponCode</h4></div>
                        </div>
                        <h3>terms & conditions apply</h3>
                        <p class="h2">@Html.ActionLink("More Info", "Details", new { promotionName = $"{today.Name.ToLower()}-offer" }, new { @id="promotions-header-today-more-info" })</p>
                    </div>
                </div>
                <div class="visible-md-inline pure-u-1 pure-u-md-1-2">
                    <img src="~/Images/Common/sunglasses.png" class="pure-img" />
                </div>
            </div>
        </div>
    }
}

<div id="promotion-wrapper" class="ass-container mainpage">
    <p class="h2 header ass-fade h-spacer">Casino Welcome Bonus</p>

    <div class="promo-image pure-u-1">
        <div>
            <img src="/Images/Promotions/welcome-offer.jpg" class="pure-img img-rounded" />
            @Html.ActionLink("More Info", "Details", "Promotions", new { promotionName = "welcome-offer" }, new { @class = "ass-button", @id="promotions-welcome-more-info"})
